{
  "project_name": "My Python Project",
  "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '_').replace('-', '_') }}",
  "project_short_description": "A short description of the project",
  "author_name": "Your Name",
  "author_email": "you@example.com",
  "copyright_year": "{% now 'local', '%Y' %}",
  "github_username": "yourusername",
  "github_org_or_user": "{{ cookiecutter.github_username }}",
  "version": "0.1.0",

  "_copy_without_render": [
    "*.html",
    "*.css",
    "*.js"
  ],

  "python_version": ["3.12", "3.11", "3.13", "3.10", "3.14"],
  "python_version_short": "{% if cookiecutter.python_version == '3.10' %}310{% elif cookiecutter.python_version == '3.11' %}311{% elif cookiecutter.python_version == '3.12' %}312{% elif cookiecutter.python_version == '3.13' %}313{% else %}314{% endif %}",

  "license": [
    "MIT",
    "Apache-2.0",
    "BSD-3-Clause",
    "GPL-3.0",
    "LGPL-3.0",
    "MPL-2.0"
  ],

  "include_cli": ["yes", "no"],
  "cli_tool_name": "{{ cookiecutter.project_slug }}",

  "include_ml_dependencies": ["no", "yes"],
  "include_api_framework": ["no", "yes"],

  "_comment_mcp": "MCP Server Support (from zen-mcp-server analysis)",
  "include_mcp_server": ["no", "yes"],
  "mcp_transport": ["stdio", "http", "sse"],

  "_comment_api": "API Integration Patterns (from xero-practice-management & FIS analysis)",
  "include_api_client": ["no", "yes"],
  "api_auth_type": ["none", "oauth2", "api_key", "jwt"],
  "include_retry_logic": ["yes", "no"],
  "include_rate_limiting": ["yes", "no"],

  "_comment_database": "Database/Ledger Patterns (from ledgerbase analysis)",
  "include_database": ["none", "sqlalchemy", "sqlalchemy_migrations", "sqlalchemy_ledger"],
  "database_dialect": ["postgresql", "mysql", "sqlite"],
  "include_repository_pattern": ["no", "yes"],
  "include_unit_of_work": ["no", "yes"],

  "_comment_financial": "Financial System Patterns (from FIS analysis)",
  "include_financial_validators": ["no", "yes"],
  "include_audit_logging": ["no", "yes"],
  "use_decimal_precision": ["no", "yes"],

  "_comment_docs": "Documentation Configuration",
  "use_mkdocs": ["yes", "no"],
  "use_sphinx": ["no", "yes"],

  "_comment_coverage": "Quality Thresholds",
  "code_coverage_target": "80",
  "docstring_coverage_target": "85",

  "_comment_tools": "Development Tools (Ruff, Mypy, Bandit always included for Python projects)",
  "use_pre_commit": ["yes", "no"],

  "_comment_cicd": "CI/CD Configuration (Gitleaks, OSV Scanner, Semgrep, TruffleHog always included for security)",
  "include_github_actions": ["yes", "no"],
  "include_semantic_release": ["yes", "no"],
  "include_fuzzing": ["no", "yes"],
  "include_codecov": ["yes", "no"],
  "include_sonarcloud": ["no", "yes"],
  "sonarcloud_organization": "your-org",
  "include_renovate": ["yes", "no"],

  "_comment_integrations": "Third-Party Integrations",
  "include_coderabbit": ["yes", "no"],
  "include_linear": ["no", "yes"],
  "linear_team_key": "",

  "_comment_security": "Enhanced Security (from pp-security-master analysis)",
  "include_compliance_docs": ["yes", "no"],
  "include_threat_model": ["no", "yes"],
  "security_email": "security@example.com",

  "_comment_dev": "Development Environment",
  "include_nox": ["yes", "no"],
  "include_docker": ["no", "yes"],

  "_comment_monitoring": "Monitoring and Observability",
  "include_sentry": ["no", "yes"],
  "include_health_checks": ["yes", "no"],

  "_comment_testing": "Testing Configuration",
  "include_mutation_testing": ["no", "yes"],

  "_comment_performance": "Performance and Scalability",
  "include_background_jobs": ["no", "arq", "celery"],
  "include_caching": ["no", "yes"],
  "include_load_testing": ["no", "yes"],

  "_comment_community": "Community Files",
  "use_reuse_licensing": ["yes", "no"],
  "include_code_of_conduct": ["yes", "no"],
  "include_contributing_guide": ["yes", "no"],
  "include_security_policy": ["yes", "no"],

  "_comment_urls": "Project URLs",
  "github_repo_name": "{{ cookiecutter.project_slug.replace('_', '-') }}",
  "repo_url": "https://github.com/{{ cookiecutter.github_org_or_user }}/{{ cookiecutter.github_repo_name }}",
  "docs_url": "https://{{ cookiecutter.github_repo_name }}.readthedocs.io",
  "pypi_package_name": "{{ cookiecutter.project_slug.replace('_', '-') }}"
}
